datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}


model Bot {
  id       String @id @default(cuid())
  grammar String
  isPublic Boolean @default(false) @map(name: "is_public")
  enabled Boolean @default(false)
  identifier String @unique
  password String @map(name: "atproto_password")
  schedule Schedule
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @map(name: "updated_at")
  lastPostAt DateTime? @map(name: "last_post_at")
  lastError String? @map(name: "last_error")

  @@map("bot")
}

enum Schedule {
  EVERY_10_MINUTES
  EVERY_30_MINUTES
  EVERY_1_HOURS
  EVERY_2_HOURS
  EVERY_6_HOURS
  EVERY_12_HOURS
  EVERY_1_DAYS
  EVERY_2_DAYS
  EVERY_1_WEEKS
}
