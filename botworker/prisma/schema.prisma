generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model bot {
  id               String    @id
  grammar          String
  is_public        Boolean   @default(false)
  enabled          Boolean   @default(false)
  identifier       String    @unique
  atproto_password String
  schedule         Schedule
  created_at       DateTime  @default(now())
  updated_at       DateTime
  last_post_at     DateTime?
  last_error       String?
}

enum Schedule {
  EVERY_10_MINUTES
  EVERY_30_MINUTES
  EVERY_1_HOURS
  EVERY_2_HOURS
  EVERY_6_HOURS
  EVERY_12_HOURS
  EVERY_1_DAYS
  EVERY_2_DAYS
  EVERY_1_WEEKS
}
